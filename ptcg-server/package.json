{
  "name": "ptcg-server",
  "version": "0.0.3",
  "description": "Server of the ptcg game.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "compile": "tsc && tsc -p tsconfig.dist.json",
    "build": "npm run lint && npm run test && npm run compile",
    "build:prod": "npm run compile",
    "outputs": ".vercel/**",
    "start": "node start.js",
    "start:dev": "nodemon -e ts --inspect --exec \"npx tsc && npx kill-port 8080 && npm run start\"",
    "test": "nyc -e \".ts\" -x \"src/**/*.spec.ts\" jasmine-ts \"src/**/*.spec.ts\"",
    "coverage": "npm test && nyc report -r html",
    "copy:avatars": "node -e \"require('fs').cpSync('./avatars', './dist/avatars', {recursive: true});\""
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@progress/pako-esm": "^1.0.1",
    "body-parser": "^1.19.0",
    "build": "^0.1.4",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "find-config": "^1.0.0",
    "jimp": "^0.16.1",
    "mysql2": "^3.7.0",
    "nodemailer": "^6.6.5",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.2.0",
    "sqlite3": "^5.1.6",
    "typeorm": "^0.2.38"
  },
  "devDependencies": {
    "@types/express": "^4.17.7",
    "@types/jasmine": "^2.8.17",
    "@types/node": "^12.12.54",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "jasmine": "^3.9.0",
    "jasmine-ts": "~0.4.0",
    "nodemon": "^2.0.13",
    "nyc": "^15.1.0",
    "ts-node": "~7.0.0",
    "typescript": "~4.3.5"
  },
  "nodemonConfig": {
    "ignore": [
      "coverage/*",
      "dist/*",
      "output/*",
      ".nyc_output/*"
    ],
    "delay": "2500",
    "watch": "src"
  }
}
